@model MvcWeb.Models.ContactPage
@{
    ViewBag.Title = Model.Title;
    string urlLang = ViewBag.urlLang;
    string lang = "";
    if (urlLang.Contains("/en"))
        lang = "en";
    else lang = "vi";
}


<section id="page">
    <section id="page_bg" class="fw">
        <img class="img-fluid" src="@(Model.Banner.Image.Media.PublicUrl.Substring(1)??"")" alt="">
        <div class="page_breadcrumb">
            <h3>@Model.Banner.Title</h3>
            <div>
                <a href="/home">@(lang == "vi" ? "Trang chủ" : "Home")</a> <span>/</span> <a href="#">@(lang == "vi" ? "Liên hệ" : "Contact")</a>
            </div>
        </div>
    </section>

    <section class="contact-address fw">
        <div class="content-address">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.lstContact)
                    {
                        <div class="col col-lg-6 col-md-6 col-12">
                            <div class="address ">
                                <div class="icon-dress">
                                    <img src="@(item.Image.Media.PublicUrl.Substring(1)??"")" alt="">
                                </div>
                                <div class="title-address">
                                    <h5>@item.Title</h5>
                                </div>
                                <div class="list-address">
                                    <ul>
                                        <li><span>@(lang == "vi" ? "Điện thoại:" : "Phone: ")</span>@item.Phone</li>
                                        <li><span>Fax:</span>@item.Fax</li>
                                        <li>
                                            <span>@(lang == "vi" ? "Địa chỉ:" : "Address: ")</span>@item.Address
                                        </li>
                                        <li><a href="@item.MapLink.Value" target="_blank">@(lang == "vi" ? "Xem trên bản đồ" : "View in maps")</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="quotes text-center">
                    @Html.Raw(Model.Intro)
                </div>
            </div>
        </div>
    </section>

    <section class="form-contact fw">
        <div class="container">
            <div class="bg-form">
                <form action="">
                    <div class="row">
                        <div class="col col-lg-4 col-md-4 col-12">
                            <div class="form-group">
                                <label for="hoten">@(lang == "vi" ? "Họ và tên" : "Name")</label>
                                <input type="text" class="form-control" id="ctphoten" aria-describedby="emailHelp"
                                       placeholder="@(lang == "vi" ? "Nhập đầy đủ họ và tên" : "Input name")">
                            </div>
                        </div>
                        <div class="col col-lg-4 col-md-4 col-12">
                            <div class="form-group">
                                <label for="tencongty">@(lang == "vi" ? "Tên công ty" : "Company")</label>
                                <input type="text" class="form-control" id="ctptencongty"
                                       aria-describedby="emailHelp" placeholder="@(lang == "vi" ? "Tên công ty" : "Company")">
                            </div>
                        </div>
                        <div class="col col-lg-4 col-md-4 col-12">
                            <div class="form-group">
                                <label for="chucdanh">@(lang == "vi" ? "Chức danh" : "Title")</label>
                                <input type="text" class="form-control" id="ctpchucdanh"
                                       aria-describedby="emailHelp" placeholder="@(lang == "vi" ? "Chức danh" : "Title")">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-lg-4 col-md-4 col-12">
                            <div class="form-group">
                                <label for="sofax">@(lang == "vi" ? "Fax" : "Fax")</label>
                                <input type="text" class="form-control" id="ctpsofax" aria-describedby="emailHelp"
                                       placeholder="@(lang == "vi" ? "Số fax của công ty bạn" : "Fax number")">
                            </div>
                        </div>
                        <div class="col col-lg-4 col-md-4 col-12">
                            <div class="form-group">
                                <label for="email"> E-mail</label>
                                <input type="text" class="form-control" id="ctpemail" aria-describedby="emailHelp"
                                       placeholder="@(lang == "vi" ? "Địa chỉ email của bạn" : "Your email")">
                            </div>
                        </div>
                        <div class="col col-lg-4 col-md-4 col-12">
                            <div class="form-group">
                                <label for="phone">@(lang == "vi" ? "Điện thoại" : "Phone")</label>
                                <input type="text" class="form-control" id="ctpphone" aria-describedby="emailHelp"
                                       placeholder="@(lang == "vi" ? "Điện thoại" : "Your phone number") ">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="diachi">@(lang == "vi" ? "Thông tin cần tư vấn" : "Information")</label>
                        <textarea class="form-control" id="ctpthongtin" rows="4"
                                  placeholder="@(lang == "vi" ? "Thông tin cần tư vấn" : "Information")"></textarea>
                    </div>
                    <div class="btn-contact">
                        <button id="btnContactPage"><a>@(lang == "vi" ? "Gửi" : "Send")</a></button>
                    </div>
                </form>
                <span style="display:none" id="mailReceiver">@Model.MailReceiver</span>
                <span style="display:none" id="mailSender">@Model.MailSender</span>
                <span style="display:none" id="mailSenderPass">@Model.MailSenderPass</span>
            </div>
        </div>
    </section>
</section>