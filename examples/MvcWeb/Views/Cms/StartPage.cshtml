@model MvcWeb.Models.TeaserPage
@{
    ViewBag.Title = Model.Title;
    string urlLang = ViewBag.urlLang;
    string lang = "";
    if (urlLang.Contains("/en"))
        lang = "en";
    else lang = "vi";
}

@if (Model.Popup.HasValue)
{
    <div class="backgroundads">
        <div class="ads">
            <button type="button" id="closeads">&times;</button>
            <img src="@(Model.Popup.Media.PublicUrl.Substring(1)??"")" />
        </div>
    </div>
}

<section id="image_bg" class="fw">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model.indexPicture)
            {
                <div class="carousel-item @(Model.indexPicture.First() == item ?"active" : "")">
                    <img class="d-block w-100" src="@(item.Media.PublicUrl.Substring(1)??"")" alt="">
                </div>
            }
        </div>
    </div>
</section>
<section id="services" class="fw">
    <div class="container">
        <div class="image_info wow animate__animated animate__bounce">
            <div class="image_row">
                @foreach (var item in Model.lstShortcut)
                {
                    <div class="col-6 col-lg-2 image_div">
                        <a href="@item.Link.Value">
                            <img class="img-fluid" src="@(item.Image.Media.PublicUrl.Substring(1)??"")" alt="">
                            <h6>@item.Title</h6>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="row mar0 wow animate__animated animate__backInDown">
            <div class="col-12 col-lg-4 w30 services_div_title title_row">
                <h2 class="title">@(lang == "vi" ? "Dịch vụ cung cấp và thông tin" : "Providing services and information")</h2>
                <p class="title_line">
                    <span class="title_line_mb"></span>
                </p>
            </div>
            @foreach (var item in Model.lstServices)
            {
                string lnk = "";
                if (item.Link.Value == "" || item.Link.Value == null)
                    lnk = "";
                else
                    lnk = "href=" + item.Link.Value + " target= _blank";

                <div class="col-6 col-lg-4 w30 services_div">
                    <a style="display: block;" @lnk>
                        <img class="img-fluid" src="@(item.Image.Media.PublicUrl.Substring(1)??"")" alt="">
                        <h6>@item.Title</h6>
                        <span class="services_div_line"></span>
                        <p>
                            @item.SubTitle
                        </p>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section id="news" class="fw wow animate__animated animate__flipInX">
    <div class="container">
        <div class="title_row">
            <h2 class="title">Tin tức</h2>
            <p class="title_line">
                <span class="title_line_mb"></span>
            </p>
        </div>
        <div class="row mar0">
            @{
                string ago = lang == "vi" ? " giờ trước" : " hours ago";
                var items = Model.lstNews;
                <div class="col-12 col-lg-8 big_news">
                    <img class="img-fluid" src="@(items[0].Post.PrimaryImage.Media.PublicUrl.Substring(1) ?? "")" alt="">
                    <div class="news_title">
                        <a href="@items[0].Post.Permalink">
                            @Html.Raw(items[0].Post.Excerpt)
                        </a>
                        <p> <i class="fas fa-clock"></i>@(DateTime.Now.Hour - items[0].Post.Published?.Hour) @ago</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="col-12 col-lg-12 small_news">
                        <img class="img-fluid" src="@(items[1].Post.PrimaryImage.Media.PublicUrl.Substring(1) ?? "")" alt="">
                        <div class="news_title">
                            <a href="@items[1].Post.Permalink">
                                @Html.Raw(items[1].Post.Excerpt)
                            </a>
                            <p> <i class="fas fa-clock"></i>@(DateTime.Now.Hour - items[1].Post.Published?.Hour) @ago</p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 small_news">
                        <img class="img-fluid" src="@(items[2].Post.PrimaryImage.Media.PublicUrl.Substring(1) ?? "")" alt="">
                        <div class="news_title">
                            <a href="@items[2].Post.Permalink">
                                @Html.Raw(items[2].Post.Excerpt)
                            </a>
                            <p> <i class="fas fa-clock"></i>@(DateTime.Now.Hour - items[2].Post.Published?.Hour) @ago</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mar0">
            <div class="viewmore">
                <a href="@(lang == "vi" ? "/tin-tuc" : "/news")" class="link">@(lang == "vi" ? "Xem thêm" : "Read more")</a>
            </div>
        </div>
    </div>
</section>
