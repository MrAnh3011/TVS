@model MvcWeb.Models.TeaserPage
@{
    ViewBag.Title = Model.Title;
}

<section id="image_bg" class="fw">
    <img class="img-fluid" src="@(Model.indexPicture.Media.PublicUrl.Substring(1)??"")" alt="">
</section>
<section id="services" class="fw">
    <div class="container">
        <div class="image_info">
            <div class="image_row">
                @foreach (var item in Model.lstShortcut)
                {
                    <div class="col-6 col-lg-2 image_div">
                        <img class="img-fluid" src="@(item.Image.Media.PublicUrl.Substring(1)??"")" alt="">
                        <h6>@item.Title</h6>
                    </div>
                }
            </div>
        </div>
        <div class="row mar0">
            <div class="col-12 col-lg-4 w30 services_div_title title_row">
                <h2 class="title">Dịch vụ cung cấp và thông tin</h2>
                <p class="title_line">
                    <span class="title_line_mb"></span>
                </p>
            </div>
            @foreach (var item in Model.lstServices)
            {
                <div class="col-12 col-lg-4 w30 services_div">
                    <img class="img-fluid" src="@(item.Image.Media.PublicUrl.Substring(1)??"")" alt="">
                    <h6>@item.Title</h6>
                    <span class="services_div_line"></span>
                    <p>
                        @item.SubTitle
                    </p>
                </div>
            }
        </div>
    </div>
</section>
<section id="news" class="fw">
    <div class="container">
        <div class="title_row">
            <h2 class="title">Tin tức</h2>
            <p class="title_line">
                <span class="title_line_mb"></span>
            </p>
        </div>
        <div class="row mar0">
            <div class="col-12 col-lg-8 big_news">
