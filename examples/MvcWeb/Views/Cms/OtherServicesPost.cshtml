@model MvcWeb.Models.NewsPost
@{
    ViewBag.Title = ViewBag.Page.Title;

    var lstArchive = ViewBag.lstArchive;
    string urlLang = ViewBag.urlLang;
    string lang = "";
    if (urlLang.Contains("/en"))
        lang = "en";
    else lang = "vi";
}

<section id="page">
    <section id="page_bg" class="fw">
        <img class="img-fluid" src="@(Model.Banner.Image.HasValue ? Model.Banner.Image.Media.PublicUrl.Substring(1):"")" alt="">
        <div class="page_breadcrumb">
            <h3>@Model.Banner.Title</h3>
            <div>
                <a href="#">@(lang == "vi" ? "Trang chủ" : "Home")</a> <span>/</span> <a href="#">@ViewBag.Page.Title</a>
            </div>
        </div>
    </section>
    <section id="page_content" class="fw">
        <div class="container">
            <div class="row mar0">
                <div class="col-12 col-lg-9 page_content">
                    <div class="detail_content ">
                        <div class="news_detail_content">
                            @Html.DisplayFor(m => m.Blocks)
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 page_category">
                    <div class="title_row">
                        <h2 class="title">@ViewBag.Page.Title</h2>
                        <p class="title_line"></p>
                    </div>
                    <nav>
                        <div class="nav" id="nav-tab" role="tablist">
                            @foreach (var item in lstArchive.Posts)
                            {
                                <a class="nav-item nav-link" id="nav-home-tab" href="@urlLang@item.Permalink" role="tab">
                                    @item.Title
                                </a>
                            }
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
</section>