@model MvcWeb.Models.ForgotPassword
@{
    ViewData["Title"] = "ForgotPass";
    string urlLang = ViewBag.urlLang;
    string lang = "";
    if (urlLang.Contains("/en"))
        lang = "en";
    else lang = "vi";
}

<section id="page_login">
    <img class="img-fluid" src="assets/images/login_bg.jpg" alt="">
    <div class="login_div">
        <h5 class="text_bold">Quên mật khẩu</h5>
        <form action="">
            <div class="form-group">
                <label for="my-input">Mật khẩu</label>
                <input id="my-input" class="form-control" placeholder="Mật khẩu" type="password" name="">
            </div>
            <div class="form-group">
                <label for="my-input2">Xác nhận mật khẩu</label>
                <input id="my-input2" class="form-control" placeholder="Xác nhận mật khẩu" type="password" name="">
            </div>
            <div class="form-group">
                <button class="btn btn-primary login">Lưu mật khẩu mới</button>
            </div>
        </form>
        <div class="login_social">
            <a href="login.html" class="register">Quay lại đăng nhập</a>
        </div>
    </div>
</section>