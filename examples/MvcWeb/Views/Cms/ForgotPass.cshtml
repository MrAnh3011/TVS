@model MvcWeb.Models.ForgotPassword
@{
    ViewBag.Title = Model.Title;
    string urlLang = ViewBag.urlLang;
    string lang = "";
    if (urlLang.Contains("/en"))
        lang = "en";
    else lang = "vi";
}

<section id="page_login">
    <img class="img-fluid" src="assets/images/login_bg.jpg" alt="">
    <div class="login_div">
        <h5 class="text_bold">@(lang == "vi" ? "Quên mật khẩu" : "Forgot password")</h5>
        <div>
            <div class="form-group">
                <label for="forgot-email">Email</label>
                <input id="forgot-email" class="form-control" placeholder="Email" type="text" name="">
            </div>
            <div class="form-group">
                <label for="forgot-pass">@(lang == "vi" ? "Mật khẩu" : "Password")</label>
                <input id="forgot-pass" class="form-control" placeholder="@(lang == "vi" ? "Mật khẩu" : "Password")" type="password" name="">
            </div>
            <div class="form-group">
                <label for="forgot-repass">@(lang == "vi" ? "Xác nhận mật khẩu" : "Re-input Password")</label>
                <input id="forgot-repass" class="form-control" placeholder="@(lang == "vi" ? "Mật khẩu" : "Password")" type="password" name="">
            </div>
            <div class="form-group">
                <button id="btnForgotpass" class="btn btn-primary login">@(lang == "vi" ? "Lưu mật khẩu mới" : "Save new password")</button>
            </div>
        </div>
        <div class="login_social">
            <a href="@(lang == "vi" ? "dang-nhap" : "login")" class="register">@(lang == "vi" ? "Quay lại đăng nhập" : "Return login")</a>
        </div>
    </div>
</section>