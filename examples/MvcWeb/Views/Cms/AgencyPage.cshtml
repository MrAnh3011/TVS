@model MvcWeb.Models.AgencyPage
@{
    ViewData["Title"] = "AgencyPage";
}

<section id="page">
    <section id="page_bg" class="fw">
        <img class="img-fluid" src="@(Model.Banner.Image.Media.PublicUrl.Substring(1)??"")" alt="">
        <div class="page_breadcrumb">
            <h3>@Model.Banner.Title</h3>
            <div>
                <a href="#">Trang chủ</a> <span>/</span> <a href="#">Dịch vụ</a>
            </div>
        </div>
    </section>
    <section id="page_content" class="fw">
        <div class="container">
            <div class="row mar0">
                <div class="col-12 col-lg-9 page_content">
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade shadow_content show active" id="nav-intro" role="tabpanel"
                             aria-labelledby="nav-home-tab">
                            @Html.Raw(Model.IntroServices)
                        </div>
                        <div class="tab-pane fade shadow_content" id="nav-trading-online" role="tabpanel"
                             aria-labelledby="nav-profile-tab">
                            @Html.Raw(Model.OnlineTrading)
                        </div>
                        <div class="tab-pane fade shadow_content" id="nav-trading-support"
                             role="tabpanel" aria-labelledby="nav-contact-tab">
                            @Html.Raw(Model.SupportTrading)
                        </div>
                        <div class="tab-pane fade shadow_content" id="nav-finance" role="tabpanel"
                             aria-labelledby="nav-contact-tab">
                            @Html.Raw(Model.FinancialServices)
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 page_category">
                    <div class="title_row">
                        <h2 class="title">Danh mục</h2>
                        <p class="title_line"></p>
                    </div>
                    <nav>
                        <div class="nav" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab"
                               href="#nav-intro" role="tab" aria-controls="nav-home" aria-selected="true">
                                Giới
                                thiệu dịch vụ môi giới
                            </a>
                            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab"
                               href="#nav-trading-online" role="tab" aria-controls="nav-profile"
                               aria-selected="false">Giao dịch trực tuyến</a>
                            <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab"
                               href="#nav-trading-support" role="tab" aria-controls="nav-contact"
                               aria-selected="false">Hỗ trợ giao dịch</a>
                            <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab"
                               href="#nav-finance" role="tab" aria-controls="nav-contact"
                               aria-selected="false">Dịch vụ tài chính</a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
</section>